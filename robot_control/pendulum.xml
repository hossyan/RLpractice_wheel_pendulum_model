<mujoco model="inverted_pendulum_with_mesh">
    <compiler assetdir="../stl"/>  
    <option timestep="0.01" gravity="0 0 -9.81"/>

    <asset>
        <mesh name="body" file="body.stl"/>
        <mesh name="tire" file="tire.stl"/>
    </asset>

    <worldbody>
        <!-- 本体(モータ付き) -->
        <body name="base" pos="0 0 0.1">
            <joint type="free"/>
            <inertial mass="0.541" pos="0 0 0.061" diaginertia="0.001 1e-6 0.001"/>
            <geom type="mesh" mesh="body" rgba="0.6 0.6 0.6 1" pos="0 0 0.01" contype="1" conaffinity="1" euler="90 0 0"/> 
        
        <!-- タイヤ左 -->
            <body name="tire" pos="0 0 0">
            <joint name="tire_hinge_left" type="hinge" axis="0 1 0" pos="0 0.047 0.020025" damping="0.00005"/>
            <inertial mass="0.021" diaginertia="1.24e-5 6.234e-6 6.234e-6" pos="0 0 0.03"/>
            <geom type="mesh" mesh="tire" rgba="0.8 0.8 0.85 1"/>
            </body>
        </body>
        
        <!-- 地面 -->
        <geom type="plane" size="20 20 0.1" pos="0 0 0" rgba="0.0 0.5 0.0 1" contype="1" conaffinity="1"/>

        <!-- 照明 -->
        <light name="light1" pos="0 0 3" dir="0 0 -1" directional="true" castshadow="false" />
    </worldbody>
    
    <!-- <actuator>
        <motor joint="hinge" ctrlrange="-10 10" gear="1"/>
    </actuator> -->
</mujoco>